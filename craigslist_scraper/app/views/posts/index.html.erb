<div class="container">
<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Heading</th>
      <th>Price</th>
      <th>Neighborhood</th>
      <th>Timestamp</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.heading, post %></td>
        <td><%= number_to_currency(post.price, precision: 0) %></td>
        <td><%= post.neighborhood %></td>
        <td><%= post.timestamp %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
</div>